@model MOF.Etimad.Monafasat.ViewModel.CommitteeModel

@{
    ViewData["Title"] = (Model.CommitteeTypeId == 1 ? (MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.DetailsTechnicalCommittees) : (Model.CommitteeTypeId == 2 ? (MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.DetailsOpenOffersCommittees) : (Model.CommitteeTypeId == 3 ? (MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.DetailsCheckOffersCommittees) : (Model.CommitteeTypeId == 4 ? (MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.DetailsBlockCommittee) : (Model.CommitteeTypeId == 5 ? (MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.DetailsDirectPurchase) : (Model.CommitteeTypeId == 6 ? (MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.DetailsPreQualification) : (Model.CommitteeTypeId == 7 ? (MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.DetailsVROCommittee) :"    ")))))));
}
@section breadcrumb
   {
   <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
         <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.BreadCrumb_Home</a></li>
         <li class="breadcrumb-item active" aria-current="page">@MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.BreadCrumbCommittee</li>
      </ol>
   </nav>
}
<div class="col">
   <div class="card">
      <div class="card-body">
         <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
               <ul class="list-group form-details-list">
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-4 etd-item-title">
                           @if (@Model.CommitteeTypeId == 1)
                           {
                              <label class="label bmd-label-static">@MOF.Etimad.Monafasat.Resources.CommitteeResources.DisplayInputs.AgencyName</label>
                           }
                           else
                           {
                              <label asp-for="CommitteeName" class="label bmd-label-static"></label>
                           }

                        </div>
                        <div class="col-8 etd-item-info">
                           <span>@(Model.CommitteeName)</span>
                        </div>
                     </div>
                  </li>
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-4 etd-item-title">
                           <label asp-for="Address" class="label bmd-label-static"></label>
                        </div>
                        <div class="col-8 etd-item-info">
                           <span>
                              @(Model.Address)
                           </span>
                        </div>
                     </div>
                  </li>
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-4 etd-item-title">
                           <label asp-for="Phone" class="label bmd-label-static"></label>
                        </div>
                        <div class="col-8 etd-item-info">
                           <span>
                              @(Model.Phone)
                           </span>
                        </div>
                     </div>
                  </li>
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-4 etd-item-title">
                           <label asp-for="Fax" class="label bmd-label-static"></label>
                        </div>
                        <div class="col-8 etd-item-info">
                           <span>
                              @(Model.Fax)
                           </span>
                        </div>
                     </div>
                  </li>
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-4 etd-item-title">
                           <label asp-for="Email" class="label bmd-label-static"></label>
                        </div>
                        <div class="col-8 etd-item-info">
                           <span>
                              @(Model.Email)
                           </span>
                        </div>
                     </div>
                  </li>
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-4 etd-item-title">
                           <label asp-for="PostalCode" class="label bmd-label-static"></label>
                        </div>
                        <div class="col-8 etd-item-info">
                           <span>
                              @(Model.PostalCode)
                           </span>
                        </div>
                     </div>
                  </li>
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-4 etd-item-title">
                           <label asp-for="ZipCode" class="label bmd-label-static"></label>
                        </div>
                        <div class="col-8 etd-item-info">
                           <span>
                              @(Model.ZipCode)
                           </span>
                        </div>
                     </div>
                  </li>
               </ul>
            </div>
         </div>
      </div>
   </div>
   <div>
      @Html.ActionLink(MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.BackButton, "Index", new { committeeTypeId = MOF.Etimad.Monafasat.SharedKernal.Util.Encrypt(Model.CommitteeTypeId) }, new { @class = "btn btn-outline-primary btn-link pull-right" })
      <div class="clearfix"></div>
   </div>
</div>
