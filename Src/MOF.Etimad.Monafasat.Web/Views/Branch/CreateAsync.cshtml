@model MOF.Etimad.Monafasat.ViewModel.BranchModel

@{
   ViewData["Title"] = (MOF.Etimad.Monafasat.Resources.BranchResources.DisplayInputs.CreateBranch);
}
@section breadcrumb
   {
   <nav aria-label="breadcrumb">
      <ol class="breadcrumb"> 
         <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.BreadCrumb_Home</a></li> 
         <li class="breadcrumb-item"><a href="@Url.Action("Index", "Branch")">@MOF.Etimad.Monafasat.Resources.BranchResources.DisplayInputs.Branches</a></li>
         <li class="breadcrumb-item active" aria-current="page">@MOF.Etimad.Monafasat.Resources.BranchResources.DisplayInputs.CreateBranch</li>
      </ol>
   </nav>
}
<form method="Post" action="" class="my-form">
   @Html.AntiForgeryToken()
   <div class="card">
      <div class="card-body">
         <div class="row">
            <div class="col-lg-4 col-sm-6 col-xs-12">
               <div class="form-group bmd-form-group">
                  <label asp-for="BranchName" class="label bmd-label-static">@MOF.Etimad.Monafasat.Resources.BranchResources.DisplayInputs.BranchName</label><span class="text-danger">*</span>
                  <input type="text" class="form-control" id="BranchName" name="BranchName" asp-for="BranchName">
                  <input type="hidden" id="BranchIdString" name="BranchIdString" value="@(ViewData["BranchId"])">
                  <span asp-validation-for="BranchName" class="text-danger"></span>
               </div>
            </div>
            <div class="row">
               <div class="col-12">
                  <h5>@MOF.Etimad.Monafasat.Resources.BranchResources.DisplayInputs.MainBranchAddress</h5>
               </div>
               <div class="col-lg-4 col-sm-6 col-xs-12">
                  <div class="form-group bmd-form-group">
                     <label asp-for="MainBranchAddress.Position" class="label bmd-label-static"></label><span class="text-danger">*</span>
                     <input type="text" class="form-control" id="Position" asp-for="MainBranchAddress.Position">
                     <span asp-validation-for="MainBranchAddress.Position" class="text-danger"> </span>
                  </div>
               </div>
               <div class="col-lg-4 col-sm-6 col-xs-12">
                  <div class="form-group bmd-form-group">
                     <label asp-for="MainBranchAddress.Address" class="label bmd-label-static"></label><span class="text-danger">*</span>
                     <input type="tel" class="form-control" id="Address" asp-for="MainBranchAddress.Address">

                     <span asp-validation-for="MainBranchAddress.Address" class="text-danger"> </span>
                  </div>
               </div>
               <div class="col-lg-4 col-sm-6 col-xs-12">
                  <div class="form-group bmd-form-group">
                     <label asp-for="MainBranchAddress.Phone" class="label bmd-label-static"></label><span class="text-danger">*</span>
                     <input type="number" class="form-control" id="Phone" asp-for="MainBranchAddress.Phone">
                     <span asp-validation-for="MainBranchAddress.Phone" class="text-danger"></span>
                  </div>
               </div>
               <div class="col-lg-4 col-sm-6 col-xs-12">
                  <div class="form-group bmd-form-group">
                     <label asp-for="MainBranchAddress.Fax" class="label bmd-label-static"></label><span class="text-danger">*</span>
                     <input type="number" class="form-control" id="Fax" asp-for="MainBranchAddress.Fax">
                     <span asp-validation-for="MainBranchAddress.Fax" class="text-danger"></span>
                  </div>
               </div>
               <div class="col-lg-4 col-sm-6 col-xs-12">
                  <div class="form-group bmd-form-group">
                     <label asp-for="MainBranchAddress.Phone2" class="label bmd-label-static"></label>
                     <input type="number" class="form-control" id="Phone2" asp-for="MainBranchAddress.Phone2">
                     <span asp-validation-for="MainBranchAddress.Phone2" class="text-danger"></span>
                  </div>
               </div>
               <div class="col-lg-4 col-sm-6 col-xs-12">
                  <div class="form-group bmd-form-group">
                     <label asp-for="MainBranchAddress.Fax2" class="label bmd-label-static"></label>
                     <input type="number" class="form-control" id="Fax2" asp-for="MainBranchAddress.Fax2">
                     <span asp-validation-for="MainBranchAddress.Fax2" class="text-danger"></span>
                  </div>
               </div>
               <div class="col-lg-4 col-sm-6 col-xs-12">
                  <div class="form-group bmd-form-group">
                     <label asp-for="MainBranchAddress.Email" class="label bmd-label-static"></label>
                     <input    class="form-control" id="Email" asp-for="MainBranchAddress.Email">
                     <span asp-validation-for="MainBranchAddress.Email" class="text-danger"></span>
                  </div>
               </div> 
            </div>
            <div class="col-12 ">
               <button class="btn btn-primary" type="submit">@MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.Save</button>
               <button class="btn btn-danger" type="reset" onclick="window.location = '@Url.Action("Index", "Branch")'">@MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.Cancel</button>
               <button class="btn btn-outline-primary btn-link pull-right" type="button" onclick="window.location = '@Url.Action("Index", "Branch")'">
                  @MOF.Etimad.Monafasat.Resources.OfferResources.DisplayInputs.BackButton
                  <div class="ripple-container"></div>
               </button>
            </div>
         </div>
        
      </div>
   </div>
</form>
@section Scripts {
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
