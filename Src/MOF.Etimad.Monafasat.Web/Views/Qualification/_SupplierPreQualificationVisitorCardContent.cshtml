                           {{ tender.remainingMins}} @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Minute

                        </template>
                        <template v-else>
                           @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Ended
                        </template>

