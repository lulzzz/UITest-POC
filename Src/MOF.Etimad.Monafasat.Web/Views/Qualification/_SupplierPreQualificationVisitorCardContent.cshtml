@using MOF.Etimad.Monafasat.SharedKernel;


<link href="~/Etimad-UI/assets/scss/Etimad/tendersCard.min.css" rel="stylesheet" />

<div class="animated  delay-2s col-12 col-md-9 mt-3" id="cardsresult">
   <div class="row justify-content-center" v-if="Tenders && Tenders.length > 0">

      <div class="col-12 col-md-12 mb-4" v-for="(tender, $index) in Tenders">
         <div class="tender-card card rounded card mt-0 mb-0" v-bind:data-ref="tender.referenceNumber">
            <div class="row">
               <div class="col-12 col-md-9 p-0">
                  <div class="tender-metadata border-left border-bottom">
                     <div class="row">
                        <div class="col-12">
                           <div class="row ">
                              <div class="col-6">
                                 @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderPublishDate:  <span>{{tender.submitionDate.split('T')[0]}}</span>

                              </div>
                              <div class="col-6 text-left">
                                 <span class="badge badge-primary"> {{tender.qualificationTypeName}}</span>
                              </div>
                              <div class="col-12">
                                 <h3> 
                                    <a :href="tenderDetailsUrl(tender.tenderIdString)" v-bind:data-original-title="[tender.qualificationName]">
                                       {{tender.qualificationName.length > 100 ?  tender.qualificationName.substring(0,100) + '...' :tender.qualificationName }}
                                    </a> 
                                 </h3>
                              </div>
                              <div class="col-12">
                                 <p class="pb-2">
                                    {{tender.agencyName}}
                                    <a class="pull-right" :href="`PrequalificationVisitorDetails/${tender.tenderIdString}`">
                                       @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.Details
                                    </a>
                                 </p>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-12 col-md-3 p-0">
                  <div class="tender-chart border-bottom">
                     <div class="cont-bar" v-bind:data-bar="tender.qualificationReferenceNumber" v-bind:data-pct="parseInt(tender.remainingDays) < 0 ? 0 : parseInt(tender.remainingDays)">
                        <svg class="svg-bar" width="200" height="200" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                           <circle r="90" cx="100" cy="100" :class="tender.qualificationReferenceNumber" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0"></circle>
                           <circle :class="tender.qualificationReferenceNumber" r="90" cx="100" cy="100" fill="transparent" stroke-dasharray="565.48"></circle>
                        </svg>
                     </div>
                     <div class="text-center text-chart-indicator">

                        <template v-if="tender.remainingDays > 0 || tender.remainingHours > 0 || tender.remainingMins > 0">
                           {{ tender.remainingDays }} @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Day

