      <span class="badge badge-info d-inline-block" style="margin: 0 5px;">
         @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CancelRequestPending
      </span>
   </template>
   <template v-if="tender.cancelRequestStatus == @((int)Enums.ChangeStatusType.Rejected) && tender.tenderStatusId == @((int)Enums.TenderStatus.Approved) && (tender.changeRequestedBy == dataEntry || tender.changeRequestedBy == purshaseSpecialist)">
      <span class="badge badge-danger d-inline-block" style="margin: 0 5px;">
         @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CancelRequestRejected
      </span>
   </template>
   <template v-if="tender.cancelRequestStatus == @((int)Enums.ChangeStatusType.Approved) && tender.tenderStatusId == @((int)Enums.TenderStatus.Approved) && (tender.changeRequestedBy == dataEntry || tender.changeRequestedBy == purshaseSpecialist)">
      <span class="badge badge-primary d-inline-block" style="margin: 0 5px;">
         @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CancelRequestAccepted
      </span>
   </template>
}


