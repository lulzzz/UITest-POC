@using MOF.Etimad.Monafasat.SharedKernel;

@if (User.IsInRole(RoleNames.DataEntry) || User.IsInRole(RoleNames.Auditer) || User.IsInRole(RoleNames.PurshaseSpecialist) || User.IsInRole(RoleNames.EtimadOfficer))
{
   if (User.IsInRole(RoleNames.DataEntry) || User.IsInRole(RoleNames.PurshaseSpecialist))
   {
      <template v-if="tender.attachmentsStatus == @((int)Enums.ChangeStatusType.New)">
         <span class="badge badge-default d-inline-block" style="margin: 0 5px;">
            @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.UnderUpdateForAttachments
         </span>
      </template>
      <template v-if="tender.quantitiesTableStatus == @((int)Enums.ChangeStatusType.New)">
         <span class="badge badge-default d-inline-block" style="margin: 0 5px;">
