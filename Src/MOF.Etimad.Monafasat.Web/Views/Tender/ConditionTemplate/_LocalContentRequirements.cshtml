@model MOF.Etimad.Monafasat.ViewModel.GetConditionTemplateModel
<div class="row">
   <div class="col-12">
      <h4 class=" text-primary mt-0 mb-0">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.LocalContentConditions</h4>
   </div>
   <div class="col-12">
      <div class="col-lg-12 col-sm-12 col-xs-12">
         <div class="form-group bmd-form-group">
            <label asp-for="LocalContentMechanismIDs" class="label bmd-label-static"></label><span class="text-danger">*</span>
            <select asp-for="LocalContentMechanismIDs" data-live-search="true" class="selectpicker" required
                    asp-items="@(new SelectList(Model.LocalContentMechanism, "Id", "Name"))" data-style="select-with-transition" data-size="7"></select>
         </div>
         <span asp-validation-for="LocalContentMechanismIDs" class="text-danger"></span>
      </div>
   </div>
   <div class="col-12 my-4">
      <hr />
   </div>
   <div class="col-12">
      <h4 class=" text-primary">@MOF.Etimad.Monafasat.Resources.MandatoryListResources.DisplayInputs.MandatoryList</h4>
   </div>
   <div class="form-group p-1">
   </div>

   <div class="col-12">
      <div class="form-check">
         <label class="form-check-label text-dark-green">
            <input class="form-check-input" type="checkbox"  id="chkApplyProvisionsMandatoryList" asp-for="IsApplyProvisionsMandatoryList" />
            @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ApplyProvisionsMandatoryList
            <span class="form-check-sign">
               <span class="check"></span>
            </span>
         </label>
      </div>
   </div>
   <div class="col-12 my-4">
      <hr />
   </div>

   <div class="col-12" id="divLocalContentConditionsWeight" style="display:none">      
      <div class="col-12">
         <h5 class="text-danger mt-0">يحق للجهة حذف هذا القسم بشكل كامل في حال عدم اشتمال نطاق العمل على منتجات ضمن القائمة الإلزامية</h5>
         <h4 class=" text-primary">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.LocalContentConditionsWeight</h4>
      </div>
   </div>
    
   <div class="col-6" id="divMinimumBaseline" style="display:none">
      <div class="input-group bmd-form-group">
         <label asp-for="MinimumBaseline" class="col-12 label bmd-label-static"></label>
         <input asp-for="MinimumBaseline" min="0" max="100" class="allownumeric form-control" type="number" />
         <span class="input-group-text" id="basic-addon2">%</span>
         <span id="MinimumBaselineErrorMessage" style="display:none" class="text-danger">الرجاء ادخال قيمة الحد الأدنى لخط الأساس اكبر من او يساوي صفر و اقل من او يساوي مائة</span>
      </div>
   </div>

   <div class="col-6" id="divMinimumPercentageLocalContentTarget" style="display:none">
      <div class="input-group bmd-form-group">
         <div class="col-12 p-0">
         <label asp-for="MinimumPercentageLocalContentTarget" class="label bmd-label-static"></label><span class="text-danger">*</span>

         </div>
         <input asp-for="MinimumPercentageLocalContentTarget" min="0" max="100" class="allownumeric form-control" />
         <span class="input-group-text" id="basic-addon2">%</span>

         <span id="MinimumPercentageLocalContentTargetErrorMessage" style="display:none" class="text-danger">الرجاء ادخال قيمة الحد الادنى لنسبة المحتوى المحلي المستهدفة اكبر من او يساوي صفر و اقل من او يساوي مائة</span>
      </div>
   </div>


<div class="col-12 my-4">
   <hr />
</div>
<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12" id="divStudyMinimumTargetFileNetReferenceId" style="display:none">
   <div class="form-group bmd-form-group p-0">
      <label asp-for="StudyMinimumTargetFileNetReferenceId" class="label bmd-label-static"></label><span class="text-danger">*</span>
      @Html.FileUploaderFor(m => m.StudyMinimumTargetFileNetReferenceId, fileMaxSize: 1024 * 350, numberOfFilesToUpload: 4, multiple: false, allowedExtensions: new List<string> { "pdf", "zip" })
   <span id="StudyMinimumTargetErrorMessage" style="display:none" class="text-danger">الرجاء ارفاق ملف دراسة الحد الأدنى للمحتوى المحلي المستهدف</span>

   </div>
</div>

   </div>


<div class="row">
   <div class="col mt-3">
      <button class="btn btn-primary pull-right" id="btnAddEditLocalContent" type="button">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.SaveContinue</button>
   </div>
</div>
