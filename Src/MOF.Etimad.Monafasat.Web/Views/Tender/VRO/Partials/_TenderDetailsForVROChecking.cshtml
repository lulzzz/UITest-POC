@model MOF.Etimad.Monafasat.ViewModel.VROTenderOffersModel

<div class="col-12">
   <h4 class="text-primary">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderDetails</h4>
</div>
<div class="col-md-6 col-sm-12 col-xs-12">

   <ul class="list-group form-details-list">
      <li class="list-group-item">
         <div class="row">
            <div class="col-4 etd-item-title">
               @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderName
            </div>
            <div class="col-8 etd-item-info">
               <span>@(Model.TenderName)</span>
            </div>
         </div>
      </li>
      <li class="list-group-item">
         <div class="row">
            <div class="col-4 etd-item-title">
               @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ReferenceTenderNumber
            </div>
            <div class="col-8 etd-item-info">
               <span>
                  @(Model.TenderRefrenceNumber)
               </span>
            </div>
         </div>
      </li>
      <li class="list-group-item">
         <div class="row">
            <div class="col-4 etd-item-title">
               @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderNumber
            </div>
            <div class="col-8 etd-item-info">
               <span>
                  @(Model.TenderNumber)
               </span>
            </div>
         </div>
      </li>
      <li class="list-group-item">
         <div class="row">
            <div class="col-4 etd-item-title">
               @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ExecutionPlace
            </div>
            <div class="col-8 etd-item-info">
               <span>
                  @(Model.ExcutionPlace)
                  @if (Model.TenderAreaNameList != null && Model.TenderAreaNameList.Count > 0)
                  {
                     @foreach (var item in Model.TenderAreaNameList)
                     {
                        <ol> <li> @item.ToString()</li></ol>
                     }
                  }

               </span>
            </div>
         </div>
      </li>
   </ul>
</div>
<div class="col-md-6 col-sm-12 col-xs-12">
   <ul class="list-group form-details-list">
      <li class="list-group-item">
         <div class="row">
            <div class="col-4 etd-item-title">
               @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.BuyersCount
            </div>
            <div class="col-8 etd-item-info">
               <span>
                  @(Model.InvitationsCount)
               </span>
            </div>
         </div>
      </li>
      <li class="list-group-item">
         <div class="row">
            <div class="col-4 etd-item-title">
               @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.OffersCount
            </div>
            <div class="col-8 etd-item-info">
               <span>
                  @(Model.OffersCount)
               </span>
            </div>
         </div>
      </li>
      @if ((User.IsInRole(RoleNames.OffersOpeningAndCheckSecretary) || User.IsInRole(RoleNames.OffersOpeningAndCheckManager))
   && //(Model.EstimatedValue.HasValue && Model.EstimatedValue != 0 && Model.isVRORelatedBranchCreated == false) ||
   (Model.TenderStatusId == (int)Enums.TenderStatus.VROOffersTechnicalCheckingApproved ||
   Model.TenderStatusId == (int)Enums.TenderStatus.VROFinancialCheckingOpening ||
   Model.TenderStatusId == (int)Enums.TenderStatus.VROOffersFinancialChecking ||
   Model.TenderStatusId == (int)Enums.TenderStatus.VROOffersFinancialCheckingPending
   || Model.TenderStatusId == (int)Enums.TenderStatus.VROOffersFinancialCheckingApproved
   || Model.TenderStatusId == (int)Enums.TenderStatus.VROOffersFinancialCheckingRejected))
      {

            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.CommunicationRequest.DisplayInputs.EstimatedValue
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>
                        @(Model.EstimatedValue)
                     </span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.CommunicationRequest.DisplayInputs.EstimatedValueLetters
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>
                        @(Model.EstimatedValueText)
                     </span>
                  </div>
               </div>
            </li>

      }
      else if (Model.TenderStatusId == (int)Enums.TenderStatus.Approved || Model.isVRORelatedBranchCreated == false)
      {

      }
      else
      {
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @MOF.Etimad.Monafasat.Resources.CommunicationRequest.DisplayInputs.EstimatedValue
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     ******************
                  </span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @MOF.Etimad.Monafasat.Resources.CommunicationRequest.DisplayInputs.EstimatedValueLetters
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     ******************
                  </span>
               </div>
            </div>
         </li>
      }
   </ul>
</div>


