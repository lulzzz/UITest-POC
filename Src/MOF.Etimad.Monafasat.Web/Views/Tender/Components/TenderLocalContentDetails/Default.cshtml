@using MOF.Etimad.Monafasat.SharedKernel;
@model MOF.Etimad.Monafasat.ViewModel.Tender.LocalContent.LocalContentDetailsViewModel
@{
   ViewData["Title"] = "متطلبات المحتوى المحلي";
}

<div class="row" id="basicDetials">

   <div class="card">
      <div class="card-body">

         <div class="col-12">
            <h4 class="text-primary">متطلبات المحتوى المحلي</h4>
         </div>

         <div class="col-md-6 col-sm-12 col-xs-12">
            <ul class="list-group form-details-list">
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-4 etd-item-title">
                        @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.MinimumBaseline
                     </div>
                     <div class="col-8 etd-item-info">
                        <span>
                           @if (Model.MinimumBaseline != null)
                           {
                              @Model.MinimumBaseline <span>%</span>
                           }
                           else
                           {
                              @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NotExist
                           }
                        </span>
                     </div>
                  </div>
               </li>
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-4 etd-item-title">
                        @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.MinimumPercentageLocalContentTarget
                     </div>
                     <div class="col-8 etd-item-info">
                        <span>
                           @if (Model.MinimumPercentageLocalContentTarget != null)
                           {
                              @Model.MinimumPercentageLocalContentTarget <span>%</span>
                           }
                           else
                           {
                              @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NotExist
                           }
                        </span>
                     </div>
                  </div>
               </li>

            </ul>
         </div>
      </div>
   </div>
</div>
