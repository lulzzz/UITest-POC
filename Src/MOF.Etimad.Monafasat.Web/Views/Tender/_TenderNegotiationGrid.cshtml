@using MOF.Etimad.Monafasat.SharedKernel;

<div class="table-responsive tenderGridHight">
   <table class="table table-striped" id="TenderTable"    summary="@MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.DataShow" >
      <thead>
         <tr>
            <th scope="col" class="text-center">#</th>

            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderAddress</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ReferenceTenderNumber</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderType</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ConditionsBookletPrice</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CreatedBy</th>
            <th scope="col" style="" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ApprovedBy</th>
            <th scope="col" style="width:130px" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.GoveAgency</th>
            <th scope="col" style="width:130px" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.AgencyBranch</th>

            <th scope="col" style="width:130px" class="text-center"></th>

         </tr>
      </thead>
      <tbody v-if="Tenders && Tenders.length > 0">
         <tr v-for="(tender, $index) in Tenders">
            <td data-label="#" class="text-center"> {{ (currentPage -1) * (pageSize) +  $index + 1}} </td>
            <td class="text-center" data-label="@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ReferenceTenderNumber"> <a href="#" @@click="gotoDetails(tender.tenderIdString)"> {{tender.tenderAddress}} </a></td>
            <td class="text-center"> {{tender.referenceNumber}} </td>
            <td class="text-center"> {{tender.tenderTypeName}} </td>
            <td class="text-center"> {{tender.conditionalAmount}} </td>
            <td class="text-center"> {{tender.createdBy}} </td>
            <td class="text-center"> {{tender.approvedBy}} </td>
            <td class="text-center"> {{tender.agencyName}} </td>
            <td class="text-center"> {{tender.agencyBranchName}} </td>

            <td><a href="#" class="btn btn-primary btn-sm" @@click="ShowNegotiation(tender.negotiationIdString)">إستعراض طلب التفاوض</a> </td>

         </tr>
      </tbody>
      <tbody v-else>
         <tr>
            <td colspan="13" class="text-center">
               <i class="text-primary material-icons" style="font-size:3rem">report</i> 
               <br />
               @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NoData
            </td>
         </tr>
      </tbody>
   </table>
   @*<pagination :visible_pages="3" ref="vpaginator" :resource_url="resource_url" @@update="updateResource"></pagination>*@
</div>

