<div class="tab-pane" id="sendWithSms">
   <template v-if="isValidToUpdate">
      <div class="row">
         <div class=" col-md-6 col-sm-12">
            <div class="row">
               <div class="col-lg-10 col-sm-6 col-xs-12 form form-newsletter">
                  <div class="form-group bmd-form-group pull-left" style="width:100%">
                     <input type="number" class="form-control" id="tb_MobilNo" value="" placeholder="@Html.Raw(MOF.Etimad.Monafasat.Resources.InvitationResources.DisplayInputs.MobileNo)">
                     <span id="spanMobilNo" style="color:#ff0000"></span>
                  </div>
               </div>
               <div class="input-group-prepend pull-right">
                  <button type="button" @@click="addMobilNo()" class=" btn btn-primary btn-just-icon col-md-1"><i class="material-icons">add</i> <div class="ripple-container"></div></button>
               </div>
            </div>
         </div>
      </div>
   </template>

   <div class="row">
      <div class=" col-md-6 col-sm-12">
         <div class="col-12">
            <h4 class="text-primary">@Html.Raw(MOF.Etimad.Monafasat.Resources.InvitationResources.DisplayInputs.MobileNumbersList)</h4>
         </div>
         <div class="table-responsive">
            <table id="SuppliersTable" class="table  table-striped table-bordered text-center"    summary="@MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.DataShow" >
               <thead class="text-center">
                  <tr>
                     <th scope="col" class="text-center">#</th>
                     <th scope="col" class="text-center">@Html.Raw(MOF.Etimad.Monafasat.Resources.InvitationResources.DisplayInputs.MobileNo)</th>
                        <th v-if="isValidToUpdate" scope="col" class="text-center">@Html.Raw(MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.Operations) </th>
                  </tr>
               </thead>
               <tbody class="text-center" v-if="mobilNoList && mobilNoList.length > 0">
                  <tr v-for="(mobilNo, index) in mobilNoList">
                     <td class="text-center">
                        {{index + 1}}
                     </td>
                     <td class="text-center" data-label="@Html.Raw(MOF.Etimad.Monafasat.Resources.InvitationResources.DisplayInputs.MobileNo)">
                        {{mobilNo}}
                     </td>
                     <td  v-if="isValidToUpdate" class="text-center" data-label="@Html.Raw(MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.Operations) ">
                        <div style="text-align: center;">
                           <button type="button" @@click="removeMobilNo(index)" class=" btn btn-danger btn-round btn-just-icon btn-sm col-md-1"><i class="material-icons">remove</i> <div class="ripple-container"></div></button>
                        </div>
                     </td>
                  </tr>
               </tbody>
               <tbody v-else>
                  <tr>
                     <td colspan="9">
                        @Html.Raw(MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NoData)
                     </td>
                  </tr>
               </tbody>
            </table>
            <pagination :visible_pages="3" ref="vpaginator" :resource_url="resourceMobil_url" @@update="updateMobileResource"></pagination>
         </div>
         <div class="row" v-if="mobilNoList && mobilNoList.length > 0">
            <div class="col-12 form-group">
            </div>
         </div>
      </div>

   </div>
</div>
