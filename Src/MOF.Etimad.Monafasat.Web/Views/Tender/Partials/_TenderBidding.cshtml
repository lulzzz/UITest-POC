<div class="table-responsive">
   <table id="totalOffersAwardingTable" class="table  table-striped text-center">
      <caption></caption>
      <thead class="text-center">
         <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CommercialName</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CommercialNumber</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.BiddingValue</th>
         </tr>
      </thead>
      <tbody class="text-center" v-if="Tender.biddingRoundOffers && Tender.biddingRoundOffers.length > 0">
         <tr v-for="(offer, $index) in Tender.biddingRoundOffers">
            <td class="text-center" data-label="#"> {{ $index + 1}} </td>
            <td class="text-center" data-label="@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CommercialName"> {{offer.commercailName}} </td>
            <td class="text-center" data-label="@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CommercialNumber"> {{offer.commercialNumber}} </td>
            <td class="text-center" data-label="@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.OfferValue"> {{offer.offerValue}} </td>
         </tr>
      </tbody>
      <tbody v-else>
         <tr>
            <td colspan="9">
               <div class="text-center" align="center">
                  <i class="text-primary material-icons" style="font-size:3rem">report</i> 
                  <br />
                  @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NoData
               </div>
            </td>
         </tr>
      </tbody>
   </table>
</div>
