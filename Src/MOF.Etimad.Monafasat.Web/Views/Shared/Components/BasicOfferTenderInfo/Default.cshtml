@using System.IO;*@
@{
    //IConfiguration _configuration = _configuration = ConfigurationHelper.GetConfiguration(Directory.GetCurrentDirectory());
    //var localContentManual = _configuration.GetSection("LocalContentFiles:LocalContentManual").Value;
    ViewData["Title"] = MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderDetails;
    var executionPlace = Model.InsideKSA != null ? (Model.InsideKSA == true ? MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.InsideKSA
       : MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.OutsideKSA) : MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.InsideKSA;
}
<div class="row" id="basicDetials">
   <div class="col-12">
      <h4 class="text-primary">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.MainInformation</h4>
   </div>
   <div class="col-md-6 col-sm-12 col-xs-12">

      <ul class="list-group form-details-list">
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderName
               </div>
               <div class="col-8 etd-item-info">
                  <span>@(Model.TenderName)</span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderRefrenceNumber
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @(Model.TenderReferenceNumber)
                  </span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @if (Model.InsideKSA == true)
                  {
                     @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Areas
                  }
                  else
                  {
                     @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Countries
                  }
               </div>
               <div class="col-8 etd-item-info">
                  <ol>
                     @if (Model.TenderAreaNameList != null && Model.TenderAreaNameList.Count > 0)
                     {
                        @foreach (var areaItem in Model.TenderAreaNameList)
                        {
                           <li> @areaItem</li>
                        }
                     }
                  </ol>
               </div>
            </div>
         </li>
         @*<li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  شرح ارشادى لآلية المحتوى المحلى
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     <a target="_blank" href="/Upload/GetFile?id=@localContentManual" rel="lightbox" alt="عرض الملف" title="عرض الملف">تحميل شرح ارشادى لآلية المحتوى المحلى</a><br />
                  </span>
               </div>
            </div>
         </li>*@
         @*<li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">

                     @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.InitialGuaranteeAddress
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>
                        @(string.IsNullOrEmpty(Model.InitialGuaranteeAddress) ? MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NotExist : Model.InitialGuaranteeAddress)
                     </span>
                  </div>
               </div>
            </li>*@
      </ul>
   </div>
</div>

