<div class="table-responsive">
   <table id="CombinedSuppliers" class="table table-striped text-center" aria-describedby="Combined Suppliers">
      <thead class="text-center">
         <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.SupplierName</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.OfferResources.DisplayInputs.SupplierRole</th>
         </tr>
      </thead>
      <tbody class="text-center" v-if="CombinedSuppliers && CombinedSuppliers.length > 0">
         <tr v-for="(combinedSuppliers, $index) in CombinedSuppliers">
            <td class="text-center" data-label="#"> {{ (currentPage -1) * (pageSize) +  $index + 1}} </td>
            <td class="text-center" style="cursor:pointer" @@click="getSupplierInfo(combinedSuppliers.supplierCr)" data-label="@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.SupplierName"> {{combinedSuppliers.supplierName}} </td>
            <td class="text-center" data-label="@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.SupplierName"> {{combinedSuppliers.roleName}} </td>
      </tbody>
      <tbody v-else>
         <tr>
            <td colspan="9" class="text-center">
               <i class="text-primary material-icons" style="font-size:3rem">report</i>
               <br />
               @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NoData
            </td>
         </tr>
      </tbody>
   </table>
   <pagination :visible_pages="3" ref="vpaginator" :resource_url="resource_url" @@update="updateResource"></pagination>
</div>


