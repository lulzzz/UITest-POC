@using res = MOF.Etimad.Monafasat.Resources
@model MOF.Etimad.Monafasat.ViewModel.OfferModel
<div class="tab-pane active" id="financialOfferDetails">
   <div class="">
      <div class="">
         <div class="card">
            <div class="card-body">
               <h5 class="title text-primary">الخصم والملاحظات</h5>
               <div id="attachmentDelete">
                  @if (User.IsInRole(RoleNames.OffersCheckSecretary)
                     && (Model.TenderStatusId == (int)Enums.TenderStatus.OffersTechnicalCheckingConfirmed || Model.TenderStatusId == (int)Enums.TenderStatus.OffersFinancialChecking))
                  {
                     <div class="row">
                        <div class="  col-sm-6 col-xs-12">
                           <div class="form-group bmd-form-group">
                              <label class="label bmd-label-static">@res.OfferResources.DisplayInputs.Discount</label>
                              <input class="form-control" asp-for="Discount" id="tb_discount" :disabled="!isEdit" />
                           </div>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                           <div class="form-group bmd-form-group">
                              <label class="label bmd-label-static">@res.OfferResources.DisplayInputs.Notes</label>
                              <textarea class="form-control" asp-for="DiscountNotes" id="tb_Notes" rows="5" :disabled="!isEdit"></textarea>
                           </div>
                        </div>
                     </div>
                  }
                  else
                  {
                     <div class="row">
                        <div class="  col-sm-6 col-xs-12">
                           <div class="form-group bmd-form-group">
                              <label class="label bmd-label-static">@res.OfferResources.DisplayInputs.Discount</label>
                              <label class="form-control">@Model.Discount</label>
                           </div>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                           <div class="form-group bmd-form-group">
                              <label class="label bmd-label-static">@res.OfferResources.DisplayInputs.Notes</label>
                              <label class="form-control">@Model.DiscountNotes</label>
                           </div>
                        </div>
                     </div>
                  }
               </div>
            </div>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-3">
         <div class="card">
            <div class="card-body">
               <ul class="list-group form-details-list">
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-12 etd-item-title text-center">
                           @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TotalPrice
                        </div>
                        <div class="col-12 etd-item-info text-center h4">
                           <span id="txtTotPrice" name="totPrice"></span>
                        </div>
                     </div>
                  </li>
               </ul>
            </div>
         </div>
      </div>
      <div class="col-3">
         <div class="card">
            <div class="card-body">
               <ul class="list-group form-details-list">
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-12 etd-item-title  text-center">
                           @MOF.Etimad.Monafasat.Resources.OfferResources.DisplayInputs.Discount
                        </div>
                        <div class="col-12 etd-item-info  text-center h4">
                           <span id="txtTotAfterDiscount" name="totDiscount"></span>
                        </div>
                     </div>
                  </li>
               </ul>
            </div>
         </div>
      </div>
      <div class="col-3">
         <div class="card">
            <div class="card-body">
               <ul class="list-group form-details-list">
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-12 etd-item-title  text-center">
                           @MOF.Etimad.Monafasat.Resources.OfferResources.DisplayInputs.vat
                        </div>
                        <div class="col-12 etd-item-info  text-center h4">
                           <span id="txtTotAfterVat" name="totVat"></span>
                        </div>
                     </div>
                  </li>
               </ul>
            </div>
         </div>
      </div>
      <div class="col-3">
         <div class="card">
            <div class="card-body">
               <ul class="list-group form-details-list">
                  <li class="list-group-item">
                     <div class="row">
                        <div class="col-12 etd-item-title  text-center">
                           @MOF.Etimad.Monafasat.Resources.OfferResources.DisplayInputs.TotalPriceAfterDiscount
                        </div>
                        <div class="col-12 etd-item-info  text-center">
                           <div class="form-group p-2">
                              <input class="form-control form-control-lg text-center" type="number" id="txtFinal" min="0" name="txtFinal" :disabled="!isEdit" />
                           </div>
                        </div>
                     </div>
                  </li>
               </ul>
            </div>
         </div>
      </div>
   </div>
</div>
