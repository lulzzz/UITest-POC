@using res = MOF.Etimad.Monafasat.Resources
<div class="table-responsive ">
   <table class="table  table-striped" id="QuantityTableTable">
      <caption></caption>
      <thead>
         <tr>
            <th scope="col">#</th>
            <th scope="col">@res.TenderResources.DisplayInputs.TablesName</th>
         </tr>
      </thead>
      <tbody v-if="QuantityTables && QuantityTables.length > 0">
         <tr v-for="(quantityTable, $index) in QuantityTables">
            <td data-label=" @res.TenderResources.DisplayInputs.TablesName"> {{quantityTable.tableQuantityName}} </td>
            <td data-label="@res.SharedResources.DisplayInputs.Options">
               <div class="dropdown">
                  <button class="btn btn-primary btn-link btn-just-icon " data-toggle="dropdown" aria-expanded="false">
                     <i class="material-icons">more_vert</i> 
                     <div class="ripple-container"></div>
                  </button>
                  <div class="dropdown-menu dropdown-menu-left" x-placement="bottom-end">
                     <a :href="detailsUrl(quantityTable.quantityTableId)" class="dropdown-item">
                        <i class="material-icons">format_list_bulleted</i> @res.SharedResources.DisplayInputs.Details
                     </a>
                     <a href="#pablo" class="dropdown-item">
                        <i class="material-icons">edit</i> @res.SharedResources.DisplayInputs.Edit
                     </a>
                     <a href="#" :id="quantityTable.quantityTableId" @@click="remove(quantityTable.quantityTableId)" class="dropdown-item">
                        <i class="material-icons">clear</i> @res.SharedResources.DisplayInputs.Delete
                     </a>
                  </div>
               </div>
            </td>
         </tr>
      </tbody>
      <tbody v-else>
         <tr>
            <td colspan="9">
               @res.SharedResources.Messages.NoDataFound
            </td>
         </tr>
      </tbody>
   </table>
   <pagination :visible_pages="3" ref="vpaginator" :resource_url="resource_url" @@update="updateResource"></pagination>
</div>
