@model MOF.Etimad.Monafasat.ViewModel.AnnouncementSuppliersTemplateDetailsModel
@{
   ViewData["Title"] = MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.AnnouncementTemplateDetails;
   var tenderExecutionPlace = (Model != null && Model.InsideKSA != null) ? (Model.InsideKSA == true ? MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.InsideKSA : @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.OutsideKSA) : "";

}
<style>
   .agencyLogo {
      border-radius: 100%;
      border: 2px solid #ccc;
      padding: 5px;
      width: 56px;
   }
</style>
<div class="row">
   <div class="col-md-6 col-sm-12 col-xs-12">
      <div class="">
         <h4 class="text-primary"> @MOF.Etimad.Monafasat.Resources.QualificationResources.DisplayInputs.BasicData</h4>
      </div>
      <div class="">
         <ul class="list-group form-details-list">
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.AnnouncementSupplierTemplateName
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>@(Model.AnnouncementName)</span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.IntroAboutAnnouncementTemplate
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>@(Model.IntroAboutAnnouncementTemplate)</span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.AnnouncementSupplierTemplateResources.DisplayInputs.ReferenceNumber
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>
                        @(Model.ReferenceNumber)
                     </span>
                  </div>
               </div>
            </li>

            @if (!User.IsInRole(MOF.Etimad.Monafasat.SharedKernel.RoleNames.supplier))
            {
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-4 etd-item-title"> @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.CreatedBy</div>
                     <div class="col-8 etd-item-info"><span>@(Model.CreatedBy)</span></div>
                  </div>
               </li>
            }

            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title"> @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.AnnouncementTemplateSuppliersListType</div>
                  <div class="col-8 etd-item-info"><span>@(Model.AnnouncementListTypeName)</span></div>
               </div>
            </li>

            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title"> @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.TenderTypeName</div>
                  <div class="col-8 etd-item-info"><span>@(Model.TenderTypeName)</span></div>
               </div>
            </li>


            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title"> @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.RequirementConditionsToJoinList</div>
                  <div class="col-8 etd-item-info"><span>@(Model.RequirementConditionsToJoinList)</span></div>
               </div>
            </li>
            @if (Model.IsRequiredAttachmentToJoinList)
            {
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-4 etd-item-title"> @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.RequiredAttachment</div>
                     <div class="col-8 etd-item-info"><span>@(Model.RequiredAttachment)</span></div>
                  </div>
               </li>
            }
            @if (Model.IsEffectiveList)
            {
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-4 etd-item-title"> @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.EffectiveListDate</div>
                     <div class="col-8 etd-item-info"><span>@(Model.EffectiveListDate)</span></div>
                  </div>
               </li>
            }

            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title"> @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.Descriptions</div>
                  <div class="col-8 etd-item-info"><span>@(Model.Descriptions)</span></div>
               </div>
            </li>
         </ul>
      </div>
   </div>

   <div class="col-md-6 col-sm-12 col-xs-12">
      <div class="">
         <h4 class="text-primary">@MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.GovAgencyInfo</h4>
      </div>
      <div class="">
         <ul class="list-group form-details-list">
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.QualificationResources.DisplayInputs.GovAgencyName
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>@(User.UserAgencyName())</span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.Address
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>@(Model.AgencyAddress)</span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                    الهاتف
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>@(Model.AgencyPhone)</span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                    فاكس
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>@(Model.AgencyFax)</span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                    البريد الإلكتروني
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>@(Model.AgencyEmail)</span>
                  </div>
               </div>
            </li>
         </ul>
      </div>
   </div>

   <div class="col-md-6 col-sm-12 col-xs-12">
      <div class="">
         <h4 class="text-primary"> @MOF.Etimad.Monafasat.Resources.QualificationResources.DisplayInputs.Addresses</h4>
      </div>
      <div class="">
         <ul class="list-group form-details-list">
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.QualificationResources.DisplayInputs.ExecutionPlace
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>
                        @tenderExecutionPlace
                     </span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @if (Model.Areas != null && Model.Areas.Count > 0)
                     {
                        @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Areas
                     }
                     else
                     {
                        @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Countries
                     }
                  </div>
                  <div class="col-8 etd-item-info">
                     <ol>
                        @if (Model.Areas != null && Model.Areas.Count > 0)
                        {
                           @foreach (var areaItem in Model.Areas)
                           {
                              <li> @areaItem.Name</li>
                           }
                        }
                        else
                        {
                           @if (Model.Countries != null && Model.Countries.Count > 0)
                           {
                              @foreach (var countryItem in Model.Countries)
                              {
                                 <li> @countryItem.Name</li>
                              }
                           }
                        }
                     </ol>
                  </div>
               </div>
            </li>

            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.EstablishingActions
                  </div>
                  <div class="col-8 etd-item-info">
                     <ol>
                        @if (Model.ConstructionWorks != null)
                        {
                           @foreach (var constructionWorkItem in Model.ConstructionWorks)
                           {
                              <li> @constructionWorkItem.Name</li>
                           }
                        }
                     </ol>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.MaintenanceOperationActions
                  </div>
                  <div class="col-8 etd-item-info">
                     <ol>
                        @if (Model.MaintenanceOperationActions != null)
                        {
                           @foreach (var maintenanceWorkItem in Model.MaintenanceOperationActions)
                           {
                              <li> @maintenanceWorkItem.Name</li>
                           }
                        }
                     </ol>
                  </div>
               </div>
            </li>

            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderActivity
                  </div>
                  <div class="col-8 etd-item-info">
                     <ol>
                        @if (Model.TenderActivities != null)
                        {
                           @foreach (var activityItem in Model.TenderActivities)
                           {
                              <li>@activityItem.Name</li>
                           }
                        }
                     </ol>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.ActivityDescription
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>
                        @Model.ActivityDescription
                     </span>
                  </div>
               </div>
            </li>
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.Details
                  </div>
                  <div class="col-8 etd-item-info">
                     <span>
                        @Model.Details
                     </span>
                  </div>
               </div>
            </li>

         </ul>
      </div>
   </div>

   <div class="col-md-6 col-sm-12 col-xs-12">
      <div class="">
         <h4 class="text-primary"> @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.DocumentsAttachments</h4>
      </div>
      <div class="">
         <ul class="list-group form-details-list">
            <li class="list-group-item">
               <div class="row">
                  <div class="col-4 etd-item-title">
                     @MOF.Etimad.Monafasat.Resources.QualificationResources.DisplayInputs.SupportingDocuments
                  </div>
                  <div class="col-8 etd-item-info">
                     @if (Model.Attachments.Count > 0)
                     {
                        @foreach (var item in Model.Attachments)
                        {
                           <a href="#" onclick="RedirectURL('@item.FileNetReferenceId','@item.Name'); return false;" target="_blank" class="btn btn-outline-primary btn-sm col-12" style="white-space: normal;">
                              @item.Name
                           </a>
                        }
                     }
                     else
                     {
                        @MOF.Etimad.Monafasat.Resources.SharedResources.Messages.NoDataFound
                     }
                  </div>
               </div>
            </li>
         </ul>
      </div>
   </div>


</div>
<script>
 function RedirectURL(ids, names) {
      window.open("/Upload/getfile/" + ids + ":" + names, '_blank');
   }

</script>
