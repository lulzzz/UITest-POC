
   <div class="table-responsive" style="min-height:100px">
      <table id="AgencyRequestsTable" class="table table-striped text-center" summary="desc">
         <thead class="text-center">
            <tr>
               <th scope="col" class="text-center">#</th>
               <th scope="col" class="text-center">@Html.Raw(MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderName)</th>

               <th scope="col" class="text-center">@Html.Raw(MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderReferenceNumber)</th>
               <th scope="col" class="text-center">@Html.Raw(MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.MainActivity)</th>
            </tr>
         </thead>
         <tbody class="text-center">

         <tbody class="text-center" v-if="tenders && tenders.length > 0">
            <tr v-for="(announcementTenders, $index) in tenders">
               <td class="text-center" data-label="#">{{ (currentPage -1) * (pageSize) +  $index + 1}}</td>
               <td class="text-center" data-label="@Html.Raw(MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderName)"> {{announcementTenders.tenderName}} </td>
               <td class="text-center" data-label="@Html.Raw(MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderReferenceNumber)"> {{announcementTenders.referenceNumber}} </td>
               <td class="text-center" data-label="@Html.Raw(MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.MainActivity)"> {{announcementTenders.mainActivity}} </td>
            </tr>
         </tbody>
         <tbody v-else>
            <tr>
               <td colspan="4">
                  <div class=" text-center">
                     <i class="text-primary material-icons" style="font-size:3rem">report</i>
                     <br />
                     @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NoData
                  </div>

               </td>
            </tr>
         </tbody>
      </table>
      <pagination :visible_pages="3" ref="vpaginator" :resource_url="resource_url" @@update="updateResource"></pagination>
   </div>

