@model MOF.Etimad.Monafasat.ViewModel.NegotiationAgencyTenderModel
<div class="row" id="basicDetials">
   <div class="col-12">
      <h4 class="text-primary">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.MainInformation</h4>
   </div>
   <div class="col-md-6 col-sm-12 col-xs-12">

      <ul class="list-group form-details-list">
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderName
               </div>
               <div class="col-8 etd-item-info">
                  <span>@(Model.Tender)</span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.ReferenceTenderNumber
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @(Model.ReferenceNumber)
                  </span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.Agency
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @Model.AgencyName
                  </span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderNumberFromAgency
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @Model.TenderAgencyNumber
                  </span>
               </div>
            </div>
         </li>

         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderInitialAmount
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @Model.Amount
                  </span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">

                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderInitialAmountText
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @Model.AmountText
                  </span>
               </div>
            </div>
         </li>
      </ul>
   </div>
</div>
