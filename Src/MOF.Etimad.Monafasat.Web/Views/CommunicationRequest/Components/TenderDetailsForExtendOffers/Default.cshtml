@model MOF.Etimad.Monafasat.ViewModel.ExtendOffersValidityModel

@{
   ViewData["Title"] = MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderDetails;
}

<div class="row">
   <div class="col-12">
      <h4 class="text-primary">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderDetails</h4>
   </div>
   <div class="col-md-6 col-sm-12 col-xs-12">
      <ul class="list-group form-details-list">
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderName
               </div>
               <div class="col-8 etd-item-info">
                  <span>@(Model.TenderBasicInfoModel.TenderName)</span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderRefrenceNumber
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @(Model.TenderBasicInfoModel.TenderRefrenceNumber)
                  </span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.TenderNumber
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @(Model.TenderBasicInfoModel.TenderNumber)
                  </span>
               </div>
            </div>
         </li>
      </ul>
   </div>
   <div class="col-md-6 col-sm-12 col-xs-12">
      <ul class="list-group form-details-list">
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @MOF.Etimad.Monafasat.Resources.OfferResources.DisplayInputs.OfferAmount
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @(Model.TenderBasicInfoModel.EstimatedValue)
                  </span>
               </div>
            </div>
         </li>
         <li class="list-group-item">
            <div class="row">
               <div class="col-4 etd-item-title">
                  @MOF.Etimad.Monafasat.Resources.OfferResources.DisplayInputs.OfferAmountLetters
               </div>
               <div class="col-8 etd-item-info">
                  <span>
                     @(Model.TenderBasicInfoModel.EstimatedValueText)
                  </span>
               </div>
            </div>
         </li>
      </ul>
   </div>
</div>


