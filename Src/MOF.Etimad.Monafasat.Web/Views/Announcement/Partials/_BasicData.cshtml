<div class="col-12">
   <div class="row">
      <div class="card">
         <div class="card-body">
            <div class="row">
               <div class="col-12">
                  <h4 class="text-primary">@MOF.Etimad.Monafasat.Resources.QualificationResources.DisplayInputs.BasicData<span class="pull-right">@await Html.PartialAsync("_AgencyLogo")</span></h4>
               </div>
               <div class="col-md-6 col-sm-12 col-xs-12">
                  <div class="">
                     <ul class="list-group form-details-list">
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.AnnouncementName
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.AnnouncementName)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.AgencyName
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.AgencyName)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.BranchName
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.BranchName)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.ReferenceNumber
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.ReferenceNumber)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.TenderTypeName
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.TenderTypeName)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.IntroAboutTender
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.IntroAboutTender)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.Status
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.StatusName)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.PublishDate
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.PublishDateString)</span><br />
                                 <span>@(Model.PublishDateHijriString)</span>
                              </div>
                           </div>
                        </li>
                     </ul>
                  </div>
               </div>
               @if (!User.IsInRole(RoleNames.supplier))
               {
                  <div class="col-md-6 col-sm-12 col-xs-12">
                     <div class="">
                        <h4 class="text-primary">@MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.CreationDetails</h4>
                     </div>
                     <div class="">
                        <ul class="list-group form-details-list">
                           <li class="list-group-item">
                              <div class="row">
                                 <div class="col-4 etd-item-title">
                                    @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.CreatedBy
                                 </div>
                                 <div class="col-8 etd-item-info">
                                    <span>@(Model.CreatedBy)</span>
                                 </div>
                              </div>
                           </li>
                           <li class="list-group-item">
                              <div class="row">
                                 <div class="col-4 etd-item-title">
                                    @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.AuditedBy
                                 </div>
                                 <div class="col-8 etd-item-info">
                                    <span>@(Model.AuditedBy)</span>
                                 </div>
                              </div>
                           </li>
                        </ul>
                     </div>
                  </div>
               }
            </div>
         </div>
      </div>
   </div>
</div>
@if (!User.IsInRole(RoleNames.supplier) && User.UserRoles().Count > 0 && Model.StatusId == (int)Enums.AnnouncementStatus.Ended)
{
   <div id="resultsDiv">
      <div class="card">
         <div class="card-body">
            <div class="row">
               <div class="col-12">
                  <h4 class="text-primary">  @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.AnnouncementResult</h4>
               </div>
               <div class="col-md-6 col-sm-12 col-xs-12">
                  <div class="">
                     <ul class="list-group form-details-list">
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.JoinRequestsCount
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.AnnouncementJoinRequestsCount)</span>
                              </div>
                           </div>
                        </li>
                        <li class="list-group-item">
                           <div class="row">
                              <div class="col-4 etd-item-title">
                                 @MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.PurchaseMethodBasedOnAnnouncement
                              </div>
                              <div class="col-8 etd-item-info">
                                 <span>@(Model.PurchaseMethodName)</span>
                              </div>
                           </div>
                        </li>
                     </ul>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col-md-6 col-sm-12 col-xs-12">
                  <h4>@MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.JoinRequestsList</h4>
                  <table class="table  table-striped text-center table-bordered">
                     <caption></caption>
                     <thead>
                        <tr>
                           <th scope="col">@MOF.Etimad.Monafasat.Resources.TenderResources.DisplayInputs.SupplierName</th>
                           <th scope="col">@MOF.Etimad.Monafasat.Resources.AnnouncementResources.DisplayInputs.CommercialRegistrationNumber</th>
                        </tr>
                     </thead>
                     <tbody class="text-center">
                        @if (Model.JoinedSupplierList != null)
                        {
                           @foreach (var item in Model.JoinedSupplierList)
                           {
                              <tr>
                                 <td>@item.Value</td>
                                 <td>@item.Key</td>
                              </tr>
                           }
                        }
                        else
                        {
                           <tr>
                              <td colspan="2">
                                 @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NoData
                              </td>
                           </tr>
                        }
                     </tbody>
                  </table>
               </div>
            </div>
            @if (User.IsInRole(RoleNames.DataEntry) && Model.IsEndedAnnouncement && Model.HasJoinRequest && !Model.IsAnnouncementLinkedToTender)
            {
               <div class="row">
                  <div class="col-8 etd-item-info">
                     <a class="btn btn-outline-primary" asp-action="BasicTenderData" asp-controller="Tender" asp-route-tenderTypeIdString="@Model.TenderTypeIdString" asp-route-announcementIdString="@Model.AnnouncementIdString"> انشاء منافسة</a>
                  </div>
               </div>
            }
         </div>
      </div>
   </div>
}
