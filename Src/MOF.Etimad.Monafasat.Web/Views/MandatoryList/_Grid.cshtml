<div class="table-responsive">
   <table class="table table-striped" id="MandatoryListTable" aria-describedby="information grid">
      <thead>
         <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.MandatoryListResources.DisplayInputs.DivisonCode</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.MandatoryListResources.DisplayInputs.DivisonNameAr</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.MandatoryListResources.DisplayInputs.DivisonNameEn</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.MandatoryListResources.DisplayInputs.Products</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.MandatoryListResources.DisplayInputs.Status</th>
            <th scope="col" class="text-center">@MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.Actions</th>
         </tr>
      </thead>
      <tbody v-if="mandatoryLists && mandatoryLists.length > 0">
         <tr v-for="(mandatoryList, $index) in mandatoryLists">
            <td data-label="#" class="text-center"> {{ (currentPage -1) * (pageSize) +  $index + 1}} </td>
            <td class="text-center"> {{mandatoryList.divisionCode}} </td>
            <td class="text-center"> {{mandatoryList.divisionNameAr}} </td>
            <td class="text-center"> {{mandatoryList.divisionNameEn}} </td>
            <td class="text-center"> {{mandatoryList.productsCount}} </td>
            <td class="text-center">
               {{mandatoryList.status}}


               <button v-if="mandatoryList.isThereActiveChangeRequest" type="button" class="btn btn-sm btn-info btn-link btn-just-icon popover-status m-0" data-container="body" data-toggle="popover" data-placement="left">
                  <i class="material-icons">info</i>
                  <div class="popover-content d-none">
                     <span class="badge badge-default d-inline-block" style="margin: 0 5px;">
                       يوجد طلب تعديل
                     </span>
                  </div>
               </button>

               <button v-if="mandatoryList.isThereRejectedChangeRequest" type="button" class="btn btn-sm btn-danger btn-link btn-just-icon popover-status m-0" data-container="body" data-toggle="popover" data-placement="left">
                  <i class="material-icons">info</i>
                  <div class="popover-content d-none">
                     <span class="badge badge-default d-inline-block" style="margin: 0 5px;">
                        تم رفض طلب التعديل
                     </span>
                  </div>
               </button>
               
            </td>
            <td class="text-center">
               <div class="col p-0 text-right">
                  <partial name="_ListActions.cshtml" />
               </div>
            </td>
         </tr>
      </tbody>
      <tbody v-else>
         <tr>
            <td colspan="12" class="text-center">
               <i class="text-primary material-icons" style="font-size:3rem">report</i>
               <br />
               @MOF.Etimad.Monafasat.Resources.SharedResources.DisplayInputs.NoData
            </td>
         </tr>
      </tbody>
   </table>
</div>
